---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path.replace(/^\//, '')}`;

const entries = (await getCollection('3-pks-proekt')).sort((a, b) => a.data.order - b.data.order);
---
<Layout title="3 ПКС Проект | Атанас Николов" description="Глави от разработката за 3 ПКС – автоматизирано оценяване и дигитална трансформация.">
  <section class="flex flex-col gap-6">
    <div class="space-y-3">
      <p class="text-xs uppercase tracking-[0.18em] text-ink/60">3 ПКС Проект</p>
      <h1 class="text-3xl font-semibold">Глави и материали</h1>
      <p class="text-ink/80 leading-6 max-w-2xl">Съдържание в .md и .mdx, изградено с Astro Content Collections.</p>
    </div>
    <div class="space-y-4">
      {entries.map((entry) => (
        <a href={withBase(`/3-pks-proekt/${entry.slug}/`)} class="block rounded-xl border border-white/10 bg-panel/70 p-5 shadow-glow transition hover:border-accent">
          <div class="flex items-center justify-between gap-3">
            <div>
              <div class="text-xs text-ink/60">Глава {entry.data.order}</div>
              <h2 class="text-xl font-semibold">{entry.data.title}</h2>
            </div>
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-ink/70">{entry.data.tags.slice(0, 2).join(' · ')}</span>
          </div>
          <p class="mt-3 text-sm text-ink/80 leading-6">{entry.data.summary}</p>
        </a>
      ))}
    </div>
  </section>
</Layout>
