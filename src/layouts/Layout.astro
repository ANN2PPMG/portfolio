---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title = 'Атанас Николов | Портфолио', description = 'Портфолио на преподавател по информатика – дигитална трансформация в ППМГ Бургас' } = Astro.props;
---
<!doctype html>
<html lang="bg" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <slot name="head" />
  </head>
  <body class="text-ink">
    <Navbar />
    <main class="max-w-6xl mx-auto px-6 sm:px-8 pt-28 pb-16 flex flex-col gap-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
