---
const isHome = Astro.url.pathname === '/';
const to = (id: string) => (isHome ? `#${id}` : `/#${id}`);
import ThemeToggle from './ThemeToggle';
---

<header class="fixed top-0 inset-x-0 z-30 backdrop-blur-md bg-surface/75 border-b border-white/10">
  <div class="max-w-6xl mx-auto px-6 sm:px-8 h-16 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-accent to-accentSoft flex items-center justify-center text-surface font-mono text-sm font-semibold shadow-glow">
        AN
      </div>
      <div class="leading-tight">
        <div class="font-semibold tracking-tight">Атанас Николов</div>
        <div class="text-xs text-ink/70">Информатика · ППМГ Бургас</div>
      </div>
    </div>
    <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
      <a href={to('hero')} class="hover:text-accent">Начало</a>
      <a href={to('about')} class="hover:text-accent">За мен</a>
      <a href={to('methods')} class="hover:text-accent">Методи</a>
      <a href={to('achievements')} class="hover:text-accent">Постижения</a>
      <a href={to('pks')} class="hover:text-accent">3 ПКС</a>
    </nav>
    <div class="flex items-center gap-2">
      <ThemeToggle client:load />
      <a href={to('contact')} class="hidden sm:inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-white/10 bg-panel/70 hover:border-accent transition-colors text-sm font-semibold">Свържи се</a>
    </div>
  </div>
</header>
